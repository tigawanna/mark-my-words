{
  "name": "mark-my-words",
  "displayName": "mark-my-words",
  "description": "Easily publish your markdown directly from vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Notebooks"
  ],
  "activationEvents": [],
  "main": "dist/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "markMyWords.startMark",
        "title": "Start Mark",
        "category": "Mark My Words"
      },
      {
        "command": "markMyWords.publishMarkdown",
        "title": "Publish Markdown",
        "category": "Mark My Words"
      },
      {
        "command": "markMyWords.askToken",
        "title": "Ask Token",
        "category": "Mark My Words"
      },
      {
        "command": "markMyWords.onRefactor",
        "title": "Refactor",
        "category": "Mark My Words"
      },
      {
        "command": "markMyWords.start",
        "title": "Start",
        "category": "Mark My Words"
      }
    ],
            "configuration": {
              "title": "Mark My Words",
              "properties": {
                "markMyWords.postTargets": {
                  "type": "array",
                  "default": [],
                  "description": "Configured posting targets"
                }
              }
            }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@tomjs/tsconfig": "^1.7.1",
    "@tomjs/vite-plugin-vscode": "^3.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vscode-webview": "^1.57.5",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "cross-env": "^7.0.3",
    "vite": "5.4.8"
  }
}
